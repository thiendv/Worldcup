<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/img_thumnail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_no_image" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.7"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:singleLine="true"
        android:text="Country" />

    <TextView
        android:id="@+id/tv_gp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:singleLine="true"
        android:text="GP" />

    <TextView
        android:id="@+id/tv_w"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:singleLine="true"
        android:text="W" />

    <TextView
        android:id="@+id/tv_d"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:singleLine="true"
        android:text="D" />

    <TextView
        android:id="@+id/tv_l"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:singleLine="true"
        android:text="L" />

    <TextView
        android:id="@+id/tv_gp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:singleLine="true"
        android:text="GP" />

    <TextView
        android:id="@+id/tv_ga"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:singleLine="true"
        android:text="GA" />

    <TextView
        android:id="@+id/tv_gd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:singleLine="true"
        android:text="GD" />

    <TextView
        android:id="@+id/tv_pts"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:singleLine="true"
        android:text="PTS" />

</LinearLayout>